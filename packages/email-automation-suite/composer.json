{
    "name": "webtech-solutions/email-automation-suite",
    "description": "Laravel package for customizable email templates and advanced scheduled email campaigns with Filament admin integration",
    "type": "library",
    "keywords": [
        "laravel",
        "email",
        "templates",
        "scheduler",
        "filament",
        "automation",
        "campaigns"
    ],
    "license": "proprietary",
    "authors": [
        {
            "name": "Webtech-solutions",
            "email": "info@webtech-solutions.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0|^12.0",
        "filament/filament": "^3.0",
        "dragonmantank/cron-expression": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "WebtechSolutions\\EmailAutomation\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "WebtechSolutions\\EmailAutomation\\EmailAutomationServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
